{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "declaration": true,
    "declarationDir": "typings",
    "outDir": "es",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "lib/**/*.ts",
    "lib/**/*.tsx",
    "src/types/shims-tsx.d.ts",
    "src/types/shims-vue.d.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}
